#:kivy 1.0.9

<PongBall>:
    size: 50, 50
    canvas:
        Color:
            rgba: 252/255, 176/255, 69/255, 1  
        Ellipse:
            pos: self.pos
            size: self.size
        # Color:
        #     rgba: 41/255, 184/255, 219/255, 1
        # Line:
        #     width: 4  # Border width
        #     ellipse: (self.x, self.y, self.width, self.height)
        

<PongPaddle>:
    size: 25, 200
    canvas:
        Color:
            rgba: 41/255, 184/255, 219/255, 1
            rgba: 252/255, 176/255, 69/255, 1  
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    
    canvas:
        Color:
            rgba: 15/255, 0, 33/255, 1
        Rectangle:
            pos: self.pos
            size: self.width, self.height

    canvas.after:
        Color:
            rgba: 252/255, 176/255, 69/255, 1    
    
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
        color: 252/255, 176/255, 69/255, 1  
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)
        color: 41/255, 184/255, 219/255, 1
        color: 252/255, 176/255, 69/255, 1  
    
    PongBall:
        id: pong_ball
        center: self.parent.center
        
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y
        